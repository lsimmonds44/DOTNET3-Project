
@{
    ViewBag.Title = "SearchInsects";
}

<br />
<h1>Search Beneficial Insects</h1>
<br />
<div style="padding-left:155px;">
    <br />
    <img src="~/images/growing_zones.jpg" alt="Zone Map" style="width:532px;height:372px;" />
</div>
<br /><br />
<div style="display:inline-block; padding-left:250px; font-size:17px">
    <h3>Please select your growing zone:</h3>
</div>
<br />
<div style="clear:both;">&nbsp;</div>

@using (Html.BeginForm("InsectsByRegion", "Insects"))
{
    <div style="display:inline-block; padding-left:400px; font-size:20px">
        <select id="GrowingZone" name="GrowingZone">
            <option selected="selected" value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
            <option value="8">8</option>
            <option value="9">9</option>
            <option value="10">10</option>
        </select>
    </div>
    <br /><br /><br />
    <div style="padding-left:391px">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
}

