
@{
    ViewBag.Title = "Search Plants";
}

<br />
<h1>Search Native Plants</h1>
<br />
<div style="padding-left:155px;">
    <br />
    <img src="~/images/growing_zones.jpg" alt="Zone Map" style="width:532px;height:372px;" />
</div>
<br /><br />
<div style="display:inline-block; padding-left:70px; font-size:17px">
    <h3>Please select your growing zone:</h3>
</div>
<div style="display:inline-block; padding-left:90px; font-size:17px">
    <h3>Please select your soil type:</h3>
</div><br />
<div style="clear:both;">&nbsp;</div>

@using (Html.BeginForm("PlantsBySoilAndRegion", "Plants"))
{
    <div style="display:inline-block; padding-left:220px; font-size:20px">
        <select id="GrowingZone" name="GrowingZone">
            <option selected="selected" value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
            <option value="8">8</option>
            <option value="9">9</option>
            <option value="10">10</option>
        </select>
    </div>
    <div style="display:inline-block; padding-left:340px; font-size:20px">
        <select id="SoilType" name="SoilType">
            <option value="sandy">sandy</option>
            <option value="clay">clay</option>
            <option value="gravel">gravel</option>
            <option selected="selected" value="loam">loam</option>
        </select>
    </div>
    <div style="clear:both;">&nbsp;</div><br />
    <div style="padding-left:405px">
        <input type="submit" value="Submit" class="btn btn-primary"/>
    </div>
}


