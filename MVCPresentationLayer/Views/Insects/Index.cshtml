@model IEnumerable<DataObjects.Insect>

@{
    ViewBag.Title = "Index";
}

<h2>Results</h2>
<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.InsectID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CommonName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ScientificName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InsectType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GrowingZone)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.InsectID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CommonName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ScientificName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InsectType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GrowingZone)
        </td>
        <td>  
            @Html.ActionLink("Details", "Details", new { id=item.InsectID })            
        </td>
    </tr>
}

</table>
<div>
    @Html.ActionLink("Search Again", "SearchInsects", "Home", null, new { @class = "btn btn-primary" })
</div>
